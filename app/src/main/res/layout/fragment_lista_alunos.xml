<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_lista_alunos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/WindowActionBarNoTitle"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin55dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:id="@+id/rvListaAluno"/>

    <Button
        android:id="@+id/btnNovoAluno"
        android:layout_width="@dimen/margin55dp"
        android:layout_height="@dimen/margin55dp"
        android:text="+"
        android:textColor="#fff"
        android:textSize="40sp"
        android:elevation="6dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:background="@drawable/fundo"
        android:layout_above="@id/bottom_nav_view"
        android:stateListAnimator="@null"/>

    <android.support.design.widget.BottomNavigationView
    android:id="@+id/bottom_nav_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin55dp"
    android:layout_alignParentBottom="true"
    app:itemBackground="@color/colorPrimary"
    app:itemIconTint="@drawable/bottom_item_background_color"
    app:itemTextColor="@drawable/bottom_item_background_color"
    app:menu="@menu/menu_navigation" />
</RelativeLayout>
